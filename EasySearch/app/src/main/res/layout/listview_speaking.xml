<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <!--<include layout="@layout/circle_title"/>-->

    <LinearLayout
        android:id="@+id/ll_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.android.wordsmanagesystem.view.CustomImageView
        android:id="@+id/userImage"
        android:layout_marginTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:radius="14dp"
        android:src="@drawable/person"
       />
        <TextView
            android:id="@+id/speakName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若君"
            android:textColor="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/speakDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-03-07"
            android:textColor="@color/gray2"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="185dp"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/speakingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="确认购买平台目前基金销售的渠道比较多，包括基金公司，银行，第三方基金代销公司。其中银行费率较高，基金公司的基金少，所以个人较为推荐的就是第三方代销网站，代销的基金全面，费率也低。目前主流的基金代销网站有天相投顾的基金猫，基金买卖网，天天基金等，都是不错的基金交易平台。"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/speakImage"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/jinrong1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/giveLike"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_givelike"/>
            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="12dp"
                android:textColor="@color/gray2"
                android:text="133"/>
        </LinearLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0.1dp"
            android:background="@color/gray2"
             />
        <LinearLayout
            android:id="@+id/deliver"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_deliver"/>
            <TextView
                android:id="@+id/tvDeliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="12dp"
                android:textColor="@color/gray2"
                android:text="133"/>
    </LinearLayout>
        <View android:layout_height="fill_parent"
            android:layout_width="0.1dp"
            android:background="@color/gray2"
             />
        <LinearLayout
            android:id="@+id/commend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_commend"/>
            <TextView
                android:id="@+id/tvCommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="12dp"
                android:textColor="@color/gray2"
                android:text="133"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_height="22dp"
        android:background="@color/gray5">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/ic_appendix"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="10dp"
            android:textColor="@color/gray2"
            android:text="基金投资流程.doc 共1个文件附件"/>
    </LinearLayout>
</LinearLayout>
