<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="文件管理"
            android:textSize="20dp"
            android:textColor="@color/main_text2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="编辑"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <View
        android:layout_width = "match_parent"
        android:layout_height = "1.5dp"
        android:background="#cccccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_ringshape"
            android:drawableLeft="@mipmap/file_search"
            android:hint="搜索文件"
            android:textColorHint="@color/main_text"
            android:textSize="16dp"
            android:drawablePadding="5dp"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/rg_first_f"
                style="@style/bottom_tag_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/newfolder"
                android:paddingLeft="55dp"
                />
            <Button
                android:id="@+id/rg_first_s"
                style="@style/bottom_tag_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/sort"
                android:paddingLeft="55dp"
                />
            <Button
                android:id="@+id/rg_first_t"
                style="@style/bottom_tag_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/search"
                android:paddingLeft="55dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4">
        <ListView
            android:id="@+id/lv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#D2D2D2"
            android:dividerHeight="0.5dp">
        </ListView>
    </LinearLayout>

</LinearLayout>