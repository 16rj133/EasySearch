<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/gray5"
    android:scrollbars="none">
    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray5"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMyInfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_option_item"
            android:gravity="center_vertical"
            android:paddingRight="3dp">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:singleLine="true"
                    android:text="若君"
                    android:textColor="@color/gray0"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:text="账号:15958130731"
                    android:textColor="@color/gray2"
                    android:textSize="13sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivQRCordCard"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:src="@mipmap/ic_qr_code"/>

        </LinearLayout>

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:layout_marginTop="20dp"
            android:id="@+id/mygroup"
            app:left_image_margin_left="20dp"
            android:background="@drawable/selector_option_item"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_temp"
            app:left_text="我的小组"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:id="@+id/myfriend"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_friends"
            app:left_text="我的人脉"
            app:left_text_color="@color/black0"
            android:background="@drawable/selector_option_item"
            app:left_text_size="16sp"/>

        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:id="@+id/mymessage"
            android:background="@drawable/selector_option_item"
            android:layout_marginTop="20dp"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_message"
            app:left_text="我的消息"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <com.lqr.optionitemview.OptionItemView
            style="@style/OptionItem"
            android:id="@+id/mydays"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_days"
            app:left_text="我的日志"
            app:left_text_color="@color/black0"
            android:background="@drawable/selector_option_item"
            app:left_text_size="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View
                style="@style/Line1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/myfile"
            style="@style/OptionItem"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            android:background="@drawable/selector_option_item"
            app:left_src="@drawable/ic_file"
            app:left_text="我的文件"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/usage"
            style="@style/OptionItem"
            android:background="@drawable/selector_option_item"
            android:layout_marginTop="20dp"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_help"
            app:left_text="使用说明"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>

        <com.lqr.optionitemview.OptionItemView
            android:id="@+id/oivSetting"
            style="@style/OptionItem"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:left_image_margin_left="20dp"
            app:left_image_margin_right="18dp"
            app:left_src="@drawable/ic_control"
            app:left_text="设置"
            android:background="@drawable/selector_option_item"
            app:left_text_color="@color/black0"
            app:left_text_size="16sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>